<%= form_for(@service) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :price %>
  <%= f.number_field :price, class: 'form-control' %>

  <%= f.label :detail %>
  <%= f.text_field :detail, class: 'form-control' %>

  <%= f.submit "Save changes", class: "btn btn-primary" %>

<% end %>
