<%= form_for Service.new, controller: 'services', action: 'create' do |f| %>
  <%= f.label :"Service Type" %>
  <%= f.text_field :service_type %>
  <br><br>
  <%= f.label :"Name of service" %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :"Detail" %>
  <%= f.text_field :detail %>
  <br><br>
  <%= f.label :"Price" %>
  <%= f.text_field :price %>
  <br><br>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit "create" %>
<% end %>
